<schemalist gettext-domain="dynamic-top-bar">
  <enum id="org.gnome.shell.extensions.dynamic-top-bar.style">
    <value value="0" nick="Transparency"/>
    <value value="1" nick="Gradient"/>
  </enum>
  <schema
    id="org.gnome.shell.extensions.dynamic-top-bar"
    path="/org/gnome/shell/extensions/dynamic-top-bar/">
    <key name="style" enum="org.gnome.shell.extensions.dynamic-top-bar.style">
      <default>'Transparency'</default>
      <summary>Choose the top bar transparency style : gradient or full transparency</summary>
    </key>

    <key name="transparency-level" type="d">
      <default>0</default>
      <summary>Transparency level, 0 fully transparent, 1 fully opaque</summary>
    </key>

    <key name="button-shadow" type="b">
        <default>true</default>
        <summary>Display a shadow below buttons</summary>
    </key>

    <key name="show-activity" type="b">
        <default>true</default>
        <summary>Show the activity button</summary>
    </key>
  </schema>
</schemalist>
